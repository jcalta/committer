"""
    Committer provides a simplified command line interface to the version 
    control systems git, mercurial, and subversion.
    By executing this script you will commit all changes in the current
    directory.
    
    usage:
        commit "message" [++]
"""

import sys

from committer import VERSION, commit, errors

sys.stdout.write('commit (committer version %s)\n' % VERSION)

try:
    arguments = sys.argv
    
    if len(arguments) == 1:
        raise errors.CommitterException(__doc__, 1)
    
    commit(arguments)
    
except errors.CommitterException as committer_exception:
    sys.stderr.write(committer_exception.message + '\n')
    sys.exit(committer_exception.error_code)

sys.exit(0)
